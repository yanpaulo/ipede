@model IEnumerable<iPede.Site.Models.Entities.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>
<h3>@ViewBag.TableDescription</h3>

@*<p>
    @Html.ActionLink("Create New", "Create")
