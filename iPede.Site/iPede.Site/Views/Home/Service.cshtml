@model IEnumerable<iPede.Site.Models.Entities.Service>
@{
    ViewBag.Title = "Serviços";
}

<section class="title">
    <div class="container">
        <div class="row-fluid">
            <div class="span6">
                <h1>Serviços</h1>
            </div>
            <div class="span6">
                <ul class="breadcrumb pull-right">
                    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                    <li class="active">Serviços</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- / .title -->

<section class="services">
    <div class="container">

        <div class="row-fluid">

            @foreach (var item in Model)
            {

                <div class="span4">
                    <div class="center">
                        <i style="font-size: 48px" class="@item.Icon icon-large"></i>
                        <p> </p>
                        <h4>@item.Title</h4>
                        <p>@item.Description</p>
                    </div>
                </div>

            }

        </div>

        <hr>

        <div class="center">
            <a class="btn btn-primary btn-large" href="#">Veja os produtos que oferecemos</a>
        </div>
        <p>&nbsp;</p>

    </div>

</section>