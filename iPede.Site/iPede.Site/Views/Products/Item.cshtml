@model iPede.Site.Models.Entities.Product
@{
    ViewBag.Title = Model.Name;
}

<div class="main">
    <div class="shop_top">
        <div class="container">
            <div class="row">
                <div class="col-md-9 single_left">
                    <div class="single_image">
                        <ul id="etalage">
                            @foreach (var item in Model.Images)
                            {
                                <li>
                                    <a href="javascript:void()">
                                        <img class="etalage_thumb_image" src="@Url.Content(item.Url)?w=300&h=400&mode=pad" />
                                        <img class="etalage_source_image" src="@Url.Content(item.Url)" />
                                    </a>
                                </li>}
                        </ul>
                    </div>
                    <!-- end product_slider -->
                    <div class="single_right">
                        <h3>@Model.Name </h3>
                        <p class="m_10">@Model.ShortDescription</p>
                        <p class="price2">@Html.DisplayFor(model => model.Price)</p>
                        <ul class="options">
                            <h4 class="m_12">Tamanho(cm)</h4>
                            <li><a href="#">151</a></li>
                            <li><a href="#">148</a></li>
                            <li><a href="#">156</a></li>
                            <li><a href="#">145</a></li>
                            <li><a href="#">162(w)</a></li>
                            <li><a href="#">163</a></li>
                        </ul>
                        <ul class="product-colors">
                            <h3>Cores</h3>
                            <li><a class="color7" href="#"><span> </span></a></li>
                            <li><a class="color8" href="#"><span> </span></a></li>
                            <div class="clear"> </div>
                        </ul>
                        
                        <div class="box-info-product">
                        @Html.Partial("CartAddButton2", Model)    
                        </div>
                        <p class="m_10">@Model.FullDescription</p>
                        <div class="social_buttons">
                            <h4>95 Items</h4>
                            <button type="button" class="btn1 btn1-default1 btn1-twitter" onclick="">
                                <i class="icon-twitter"></i> Tweet
                            </button>
                            <button type="button" class="btn1 btn1-default1 btn1-facebook" onclick="">
                                <i class="icon-facebook"></i> Share
                            </button>
                            <button type="button" class="btn1 btn1-default1 btn1-google" onclick="">
                                <i class="icon-google"></i> Google+
                            </button>
                            <button type="button" class="btn1 btn1-default1 btn1-pinterest" onclick="">
                                <i class="icon-pinterest"></i> Pinterest
                            </button>
                        </div>
                    </div>
                    <div class="clear"> </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles{
    @Styles.Render("~/Content/product-css")
}

@section scripts{
    @Scripts.Render("~/bundles/product-js")
}