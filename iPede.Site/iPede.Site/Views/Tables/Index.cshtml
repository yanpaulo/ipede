@model IEnumerable<iPede.Site.Models.Entities.Table>

@{
    ViewBag.Title = "Mesas";
}

<h2>Mesas</h2>

<p>
    @Html.ActionLink("Abrir Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Pedidos", "Index", "Orders", routeValues: new { id = item.Id }, htmlAttributes: null) |
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
