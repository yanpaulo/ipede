@model iPede.Site.Models.Entities.AboutUs
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Quem Somos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AboutUsId)

        @if (ViewBag.Quadrant == 1)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.FirstQuadrantTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstQuadrantTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstQuadrantTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstQuadrantDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.FirstQuadrantDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstQuadrantDescription, "", new { @class = "text-danger" })
                </div>
            </div>
            
            @Html.HiddenFor(model => model.SecondQuadrantTitle)
            @Html.HiddenFor(model => model.ThirdQuadrantTitle)
            @Html.HiddenFor(model => model.FourthQuadrantTitle)
            @Html.HiddenFor(model => model.FourthQuadrantDescription)
        }
        
        @if (ViewBag.Quadrant == 2)
        {
            <p>Edição do segundo quadrante (Monte Conosco)</p>
        }
        
        @if (ViewBag.Quadrant == 3)
        {
            <p>Edição do terceiro quadrante (Nossos Serviços)</p>
        }

        @if (ViewBag.Quadrant == 4)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.FourthQuadrantTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FourthQuadrantTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FourthQuadrantTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FourthQuadrantDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.FourthQuadrantDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FourthQuadrantDescription, "", new { @class = "text-danger" })
                </div>
            </div>
            
            @Html.HiddenFor(model => model.FirstQuadrantTitle)
            @Html.HiddenFor(model => model.FirstQuadrantDescription)
            @Html.HiddenFor(model => model.SecondQuadrantTitle)
            @Html.HiddenFor(model => model.ThirdQuadrantTitle)
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar à lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
