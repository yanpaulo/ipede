@model IEnumerable<iPede.Site.Models.Entities.Category>

<aside class="categories">

    <h3 class="side-heading">Categorias</h3>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("Category", "Products", new { id = item.CategoryId })" class="list-group-item">
                <i class="fa fa-chevron-right"></i>
                @item.Name
            </a>
        }
    </div>
</aside>
